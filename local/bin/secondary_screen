#!/bin/bash
# If an external monitor is connected, place it with xrandr
 
# External output may be "VGA" or "VGA-0" or "DVI-0" or "TMDS-1"
# Work
EXTERNAL_OUTPUT="DP-3"
INTERNAL_OUTPUT="eDP-1"

# Home
#EXTERNAL_OUTPUT="DP1"
#INTERNAL_OUTPUT="eDP1"
# EXTERNAL_LOCATION may be one of: left, right, above, or below
#EXTERNAL_LOCATION="left"
 
case "$1" in
	left|LEFT)
		EXTERNAL_LOCATION="--left-of $INTERNAL_OUTPUT"
		;;
	right|RIGHT)
		EXTERNAL_LOCATION="--right-of $INTERNAL_OUTPUT"
		;;
	top|TOP|above|ABOVE)
		EXTERNAL_LOCATION="--above $INTERNAL_OUTPUT"
		;;
	bottom|BOTTOM|below|BELOW)
		EXTERNAL_LOCATION="--below $INTERNAL_OUTPUT"
		;;
	*)
		EXTERNAL_LOCATION="--right-of $INTERNAL_OUTPUT"
		;;
esac

if [ $1 = "off" ]; 
then
	xrandr --dpi 220 --output $INTERNAL_OUTPUT --mode 3840x2160 --output $EXTERNAL_OUTPUT --off
elif [ $1 = "mirror" ];
then
	xrandr --dpi 220 --output $INTERNAL_OUTPUT --mode 3840x2160 --output $EXTERNAL_OUTPUT --mode 1920x1080 --scale 2x2 --same-as $INTERNAL_OUTPUT 
elif xrandr | grep $EXTERNAL_OUTPUT | grep -q " connected "; 
then
	echo 'connected'
	xrandr --dpi 220 --output $INTERNAL_OUTPUT --mode 3840x2160 --output $EXTERNAL_OUTPUT --mode 1920x1080 --scale 2x2 $EXTERNAL_LOCATION --panning 3840x2160+3840+0
else
	echo 'not connected'
	xrandr --dpi 220 --output $INTERNAL_OUTPUT --mode 3840x2160 --output $EXTERNAL_OUTPUT --off
fi
