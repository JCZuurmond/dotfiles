{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ANTHROPIC_BASE_URL": "http://localhost:4000",
    "DISABLE_PROMPT_CACHING": "1"
  },
  "attribution": {
    "commit": "Co-Authored-By: Claude <noreply@anthropic.com>",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "_comment: claude config",
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/projects/*/tool-results/*)",
      "_comment: git (non-destructive)",
      "Bash(git:status)",
      "Bash(git:diff*)",
      "Bash(git:log*)",
      "Bash(git:add *)",
      "Bash(git:commit *)",
      "Bash(git:push)",
      "Bash(git:push -u *)",
      "Bash(git:branch *)",
      "Bash(git:checkout *)",
      "Bash(git:stash*)",
      "Bash(git:fetch*)",
      "Bash(git:pull*)",
      "Bash(git:merge *)",
      "Bash(git:rebase *)",
      "Bash(git:tag *)",
      "Bash(git:remote *)",
      "_comment: notes (org/obsidian)",
      "Read(~/org/notes/**)",
      "Write(/Users/cor/org/notes/*.md)",
      "Bash(grep -l \"source:\" ~/org/notes/*.md)",
      "Bash(mkdir -p ~/org/notes)",
      "_comment: skills - summarize-updates",
      "Read(~/.claude/skills/summarize-updates/**)",
      "Bash(bash ~/.claude/skills/summarize-updates/scripts/*.sh *)",
      "_comment: skills - capture-note",
      "Bash(bash ~/.claude/skills/capture-note/scripts/*.sh *)",
      "Read(~/.claude/skills/capture-notepreferred-shows.json)",
      "Write(~/.claude/skills/capture-note/preferred-shows.json)",
      "Edit(~/.claude/skills/capture-note/preferred-shows.json)",
      "Bash(cat ~/.claude/skills/capture-note/preferred-shows.json)",
      "Read(/tmp/claude/podcast-capture/*)",
      "Bash(wc -w /tmp/claude/podcast-capture/*)",
      "Bash(mkdir -p /tmp/claude/podcast-capture)",
      "_comment: utility",
      "Bash(date +%y%m%d)",
      "Bash(curl http://localhost*)",
      "Bash(curl https://localhost*)"
    ],
    "deny": [
      "Bash(rm -rf *)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "docker",
      "colima"
    ]
  },
  "effortLevel": "medium",
  "teammateMode": "tmux"
}
