set $ws9 9:lota
set $ws10 10:kappa
workspace_auto_back_and_forth yes

# for i3lock
set $i3lock $HOME/.config/i3/i3lock.sh

####
# Start up programs 
####

# Natural scroll
#exec synclient VertScroll=-79 synclient HorizScroll=-79
exec --no-startup-id gnome-settings-daemon

# start redshift
exec --no-startup-id redshift -l 52.35:4.87 -t 4000:3000

# i3lock
exec --no-startup-id xautolock -time 10 -locker '$i3lock lock'
#exec --no-startup-id xss-lock -- /home/don/.config/i3/i3lock.sh lock

exec --no-startup-id i3-msg 'workspace $ws1; exec /usr/bin/firefox; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws10; exec $HOME/.local/bin/telegram; workspace $ws1'

#####
## Fn key combinations
######

# Adjust volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec --no-startup-id pulseaudio-ctl mute && killall -SIGUSR1 i3status

## Adjust brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -10
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight +10

# i3lock
bindsym XF86Sleep exec --no-startup-id $i3lock suspend
bindsym $mod+Escape exec --no-startup-id $i3lock lock

####
## Assign workspaces
####

assign [class="Firefox"] $ws1
assign [class="Telegram"] $ws10

